{
  "name": "personal-brand-website",
  "version": "1.0.0",
  "description": "A modern static personal brand website built with Next.js 14",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run copy-config",
    "copy-config": "node -e \"require('fs').copyFileSync('staticwebapp.config.json', 'out/staticwebapp.config.json')\"",
    "export": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=\"text-summary\" --coverageReporters=\"lcov\"",
    "test:coverage:detail": "jest --coverage",
    "check": "npm run type-check && npm run test",
    "swa:init": "npx swa init --yes",
    "swa:build": "npx swa build",
    "swa:start": "npx swa start out --port 3000",
    "swa:deploy": "npx swa deploy --env production",
    "prepare": "cd .. && git config core.hooksPath .husky || true"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.3",
    "next": "^15.3.3",
    "next-mdx-remote": "^5.0.0",
    "next-seo": "^6.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@azure/static-web-apps-cli": "^2.0.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.19",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "nextjs",
    "typescript",
    "tailwindcss",
    "static-site",
    "personal-website",
    "azure-static-web-apps"
  ],
  "author": "Kenneth Heine",
  "license": "MIT"
}
