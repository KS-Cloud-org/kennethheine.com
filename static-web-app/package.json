{
  "name": "personal-brand-website",
  "version": "1.0.0",
  "description": "A modern static personal brand website built with Next.js 14",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run copy-config",
    "copy-config": "node -e \"require('fs').copyFileSync('staticwebapp.config.json', 'out/staticwebapp.config.json')\"",
    "export": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=\"text-summary\" --coverageReporters=\"lcov\"",
    "test:coverage:detail": "jest --coverage",
    "check": "npm run type-check && npm run lint && npm run format:check && npm run test",
    "fix": "npm run lint:fix && npm run format",
    "swa:init": "npx swa init --yes",
    "swa:build": "npx swa build",
    "swa:start": "npx swa start out --port 3000",
    "swa:deploy": "npx swa deploy --env production",
    "prepare": "cd .. && git config core.hooksPath .husky || true"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.3",
    "next": "^14.2.0",
    "next-mdx-remote": "^4.4.1",
    "next-seo": "^6.5.0",
    "react": "^18.3.0",
    "react-dom": "^19.1.0",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@azure/static-web-apps-cli": "^2.0.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^15.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.38",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "nextjs",
    "typescript",
    "tailwindcss",
    "static-site",
    "personal-website",
    "azure-static-web-apps"  ],
  "author": "Kenneth Heine",
  "license": "MIT"
}
