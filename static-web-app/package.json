{
  "name": "personal-brand-website",
  "version": "1.0.0",
  "description": "A modern static personal brand website built with Next.js 14",
  "private": true,  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run copy-config",
    "copy-config": "node -e \"require('fs').copyFileSync('staticwebapp.config.json', 'out/staticwebapp.config.json')\"",
    "export": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "swa:init": "npx swa init --yes",
    "swa:build": "npx swa build",
    "swa:start": "npx swa start out --port 3000",
    "swa:deploy": "npx swa deploy --env production"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.3",
    "next": "^14.2.0",
    "next-mdx-remote": "^4.4.1",
    "next-seo": "^6.5.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@azure/static-web-apps-cli": "^2.0.6",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^15.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.12.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.0"
  },
  "keywords": [
    "nextjs",
    "typescript",
    "tailwindcss",
    "static-site",
    "personal-website",
    "azure-static-web-apps"
  ],
